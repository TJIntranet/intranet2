#!/usr/bin/perl

# Syntax: i2_rm_safe username [file+]

use strict;

my $backupdir="/shared/i2_backup";
my $file;
my $username = shift @ARGV;
# I think a 1 in 100,000 chance is good enough, don't you?
my $rand = rand(99999); 

while ($file = shift @ARGV) {
	`i2_mv "$file" "$backupdir/$username_$rand_$file"`;
}
